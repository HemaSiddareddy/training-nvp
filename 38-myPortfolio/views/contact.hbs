<div class="container">
    <div class="row">
        <form action="/contact" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">Contact Me</h1>
            <hr>
            <div class="form-label-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="form-control" placeholder="Name" autofocus required>
            </div>
            
            <div class="form-label-group">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="Email address" required>
            </div>

            <div class="form-label-group">
                <label for="mobile">Mobile</label>
                <input type="number" name="mobile" id="mobile" class="form-control" placeholder="Mobile" required>
            </div>

            <div class="form-label-group">
                <br>
                <textarea name="description" id="description" rows="2" class="form-control" placeholder="Description"></textarea>
                </div>
                
            <div class="form-label-group">
                <br>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>